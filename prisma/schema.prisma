datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  name  String? 
  email String  @unique
}

model CharacterClass {
    id          Int     @id @default(autoincrement())
    name        String  @unique
    baseHp      Int 
    baseMp      Int
    baseAttack  Int
    baseDefense Int
}